<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ok3demo.MainActivity">

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_request_get"
        android:text="请求网络GET"

       />
    <Button
        app:layout_constraintStart_toEndOf="@id/btn_request_get"
        android:layout_width="wrap_content"
        android:text="请求网络post"
        android:id="@+id/btn_request_post"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:text="Typeface.DEFAULT //常规字体类型"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:textStyle="normal"
        android:typeface="serif"
        android:text="Typeface.DEFAULT_BOLD //黑体字体类型"
        android:layout_height="wrap_content" />
</LinearLayout>
